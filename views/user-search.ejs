<%- include ('_header') %>

<% if (error) { %>
    <h5 style="color: gray; font-family: Roboto;font-weight: bold;" class="ml-5"> Search for a Title or Author</h5>

<% }else{ %>
<div class="table-responsive-sm">
    <table class="table table-hover mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Location</th>
                <th>Comments</th>
            </tr>
        </thead>
        <tbody class="table-striped">
            <% for (const book of model) { %>
                <tr>
                    <td><%= book.Title %></td>
                    <td><%= book.Author %></td>
                    <td><%= book.Location %></td>
                    <td><%- book.Comments %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
<% } %>
<% - include ('_footer') %>