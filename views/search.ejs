<%- include ('_header') %>
<link rel="stylesheet" href="../styles/bootstrap/bootstrap.min.css">
<!--<h5 class="ml-4"><%= model.length %> Books found</h5> -->

<div class="table-responsive-sm"></div>
    <table class="table table-hover mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Location</th>
                <th>Comments</th>
            </tr>
        </thead>
        <tbody class="table-striped">
            <% for (const book of model) { %>
                <tr>
                    <td><%= book.Title %></td>
                    <td><%= book.Author %></td>
                    <td><%= book.Location %></td>
                    <td><%- book.Comments %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<% - include ('_footer') %>