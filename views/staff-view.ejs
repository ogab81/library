
<%- include ('_header') %>

<div class='container'>
<h5 class="ml-4" style="color: gray; font-family: Roboto; font-weight: bold;">List of Books - <%= model.length %></h5>

<div class="table-responsive-sm">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Location</th>
                <th>Comments</th>
                
                <th class="d-print-none">
                    <a class="btn btn-sm btn-success" href="/staff-create">Add</a>
                </th>
            </tr>
        </thead>
        <tbody>
            <% for (const book of model) { %>
                <tr>
                    <td><%= book.Title %></td>
                    <td><%= book.Author %></td>
                    <td><%- book.Location %></td>
                    <td><%= book.Comments %></td>
                    
                    <td class="d-print-none">
                        <a class ="btn btn-sm btn-warning" href="/staff-edit/<%= book.Book_ID %>">Edit</a>
                        <a class ="btn btn-sm btn-danger" href="/staff-delete/<%= book.Book_ID %>">Delete</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<% - include ('_footer') %>